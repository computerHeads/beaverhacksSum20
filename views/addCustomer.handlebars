<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card card-signin flex-row my-5">
                    <div class="card-img-left d-none d-md-flex">
                        <!-- Background image for card set in CSS! -->
                    </div>
                    <div id="hiddenDiv">Your reservation has been canceled</div>

                    <div class="container">
                        <div class="row ">
                            <div class="col col-lg-10 col-md-8 col-sm-6 mx-auto">

                                <div class="card-body">
                                    <br><br>
                                    <h1 class="text-center ">{{business.name}}</h1>

                                    <div id="status">
                                        There are currently <u>{{wait}}</u> people waiting ahead of you
                                        {{!-- fix this  --}}
                                    </div>
                                    <hr>
                                    <!--customer form-->
                                    <form>
                                        <p>Fill out your information below to be added to the waitlist: </p>
                                        <input name="name" type="text" required="true" placeholder="Name"><br>
                                        <br>
                                        <input type="hidden" id="country" name="country" />
                                        <input id="phone" name="phone" type="tel">
                                        <span id="error-msg" class="hide"></span><br>
                                        <br>
                                        <input name="email" type="email" placeholder="Email"><br>
                                        <br>
                                        <input id="id" name="id" type="hidden" value="{{business._id}}">
                                        <input id="submitBtn" type="submit" value="Submit" onclick="sendForm()">
                                        <br>
                                        <br>
                                        <br>
                                    </form>
                                    <div id="cancel"></div>
                                    <p> Current Business:</p>
                                    <hr>
                                    {{business.address}}<br>
                                    {{business.phone}}<br>
                                    {{business.email}}<br>
                                    <br><br>
                                    <!--end of customer form-->
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

